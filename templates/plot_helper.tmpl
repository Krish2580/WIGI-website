## -*- coding: utf-8 -*-

<%def name="changes(plot_name, post=None)">
    <div
        id="bokeh-change-plot"
        class="bokeh-plot">
        <h2>Changes</h2>
        ${plots[plot_name]['newest_changes']['plot_tag']}
    </div>
    <div
        class="data-tables">
        <table>
            <tr>
                <th> Top 10 </th>
                <th> Bottom 10 </th>
            </tr>
            <tr>
                % for value in plots[plot_name]['newest']['table_html']:
                <td>
                    ${value}
                </td>
                % endfor
            </tr>
        </table>
    </div>
</%def>


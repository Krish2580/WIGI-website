## -*- coding: utf-8 -*-

<%def name="changes(plot_name, post=None, title='Changes')">
    <div
        id="bokeh-change-plot"
        class="bokeh-plot">
        <h3>${title} ${plots[plot_name]['newest_changes']['date_range']}</h3>
        ${plots[plot_name]['newest_changes']['plot_tag']}
    </div>
    <div
        class="row">
        <div
        class="col-md-12">
            <h4> Top 10 </h4>
            ${plots[plot_name]['newest_changes']['table_html'][0]}
        </div>
    </div>
    <div
        class="row">
        <div
        class="col-md-12">
            <h4> Bottom 10 </h4>
            ${plots[plot_name]['newest_changes']['table_html'][1]}
        </div>
    </div>
</%def>

